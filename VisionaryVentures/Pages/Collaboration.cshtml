@page
@using Microsoft.AspNetCore.Http
@model VisionaryVentures.Pages.CollaborationModel

@{
    ViewData["Title"] = "Collaboration";
}
@{
    if (HttpContext.Session.GetString("username") != null)
    {
        Page();
    }
    else
    {
        Response.Redirect("/Login");
        return;
    }
}
<div class="container-fluid">
    <div class="row">
        <nav class="col-md-3 d-flex flex-column flex-shrink-0 p-3 side-bar">
            <p>@HttpContext.Session.GetString("username")</p>
            <hr>

            <form method="get" id="search-form">
                <div class="input-group">
                    <input type="search" class="form-control rounded" id="collaboration-search" placeholder="Search collaborations..." aria-label="Search">
                    <button type="button" class="btn btn-primary" onclick="filterCollaborations()">Search</button>
                </div>
            </form>

            <div class="nav nav-pills flex-column mb-auto mt-3">
                <h2 class="mb-4">Collaborations</h2>
                @if (Model.Collaborations != null && Model.Collaborations.Any())
                {
                    @foreach (var group in Model.Collaborations.GroupBy(item => item.CollaborationID).Select(g => g.First()))
                    {
                        <form method="get">
                            <button type="submit" name="SelectedCollaborationID" value="@group.CollaborationID"
                                    class="btn btn-block @((HttpContext.Session.GetInt32("collaborationid") == group.CollaborationID) ? "btn-success" : "btn-primary") mb-2">
                                @group.Title
                            </button>
                        </form>
                    }
                }
                else
                {
                    <p>No Collaborations Found.</p>
                }
            </div>
        </nav>
    </div>
</div>


<div class="main-body">
     @if (!Model.ShowAddForm)
    {
        <div class="btn-group btn-group-toggle" data-toggle="buttons" id="form-btn2">
            <form method="post" class="form-inline">
                <button asp-page-handler="AddCollab" type="submit" name="action" value="ShowAddCollab" class="btn btn-primary mb-3">Add Collaboration</button>
            </form>
        </div>
    }
    else
    {
        <div class="card" id="btn-card">
            <div class="card-header">Add New Collaboration</div>
            <div class="card-body">
                <form asp-page-handler="AddCollab" method="post">
                    <input type="hidden" name="action" value="AddCollab" />
                    <div class="form-group">
                        <label for="Title">Title</label>
                        <input asp-for="Title" type="text" class="form-control" id="title" name="Title" required>
                    </div>
                    <div class="form-group">
                        <label for="Description">Description</label>
                        <input asp-for="Description" type="text" class="form-control" id="description" name="Description" required>
                    </div>
                    <button type="submit" class="btn btn-success">Submit</button>
                    <button type="button" onclick="location.href='@Url.Page("/Collaboration")'" class="btn btn-secondary">Cancel</button>
                </form>
            </div>
        </div>
    }

    <div class="btn-group btn-group-toggle" data-toggle="buttons" id="form-btn2">
        <form method="post" class="form-inline">
            <button asp-page-handler="PrintReport" type="submit" name="action" class="btn btn-primary mb-3">Print Report of Collaboration</button>
        </form>
    </div>

    <form class="collab-Associations" method="post">
        <label for="selectedPlan">Select a Plan:</label>
        <select id="selectedPlan" name="SelectedPlanId">
            <option value="">None Selected</option>
            @foreach (var plan in Model.AllPlans)
            {
                <option value="@plan.PlanID">@plan.PlanName</option>
            }
        </select>

        <label for="selectedKnowledgeItem">Select a Knowledge Item:</label>
        <select id="selectedKnowledgeItem" name="SelectedKnowledgeItemId">
            <option value="">None Selected</option>
            @foreach (var item in Model.AllKnowledgeItems)
            {
                <option value="@item.KnowledgeItemID">@item.Title</option>
            }
        </select>

        <label for="selectedDataset">Select a Dataset:</label>
        <select id="selectedDataset" name="SelectedDatasetId">
            <option value="">None Selected</option>
            @foreach (var dataset in Model.AllDatasets)
            {
                <option value="@dataset.DatasetID">@dataset.FileName</option>
            }
        </select>
        <button class="btn btn-primary" type="submit" asp-page-handler="AssociateItems">Associate Selected Items</button>
    </form>

    <!-- Knowledge Item & Plans -->
    <div class="container task-container">
        <div class="row">
            <div class="col-md-6">
                <div class="card plan-container">
                    <div class="card-header">
                        Knowledge Items
                    </div>
                    <div class="card-body task-box">
                        <form method="get">
                            <input type="hidden" name="SelectedCollaboration" value="@Model.CollaborationID" />
                            @if (Model.KnowledgeItems != null && Model.KnowledgeItems.Any())
                            {
                                @foreach (var item in Model.KnowledgeItems)
                                {
                                    <p>@item.Title : @item.Information</p>
                                }
                            }
                            else
                            {
                                <p>No knowledge items found.</p>
                            }
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card plan-container">
                    <div class="card-header">
                        Plan Steps
                    </div>
                    <div class="card-body task-box">
                        <form method="get">
                            <input type="hidden" name="SelectedCollaboration" value="@Model.CollaborationID" />
                            @if (Model.planContents != null && Model.planContents.Any())
                            {
                                @foreach (var item in Model.planContents)
                                {
                                    <p>@item.PlanStep @item.ContentDescription</p>
                                }
                            }
                            else
                            {
                                <p>No content found.</p>
                            }
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card plan-container">
                    <div class="card-header">
                        Datasets
                    </div>
                    <div class="card-body task-box">
                        <form method="get">
                            <input type="hidden" name="SelectedCollaboration" value="@Model.CollaborationID" />
                            @if (Model.Datasets != null && Model.Datasets.Any())
                            {
                                @foreach (var item in Model.Datasets)
                                {
                                    <a href="@Url.Page("DataSets", "ReadCsv", new { fileName = item.FileName })" class="btn btn-primary">@item.FileName</a>
                                }
                            }
                            else
                            {
                                <p>No content found.</p>
                            }
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card plan-container">
                    <div class="card-header">
                        Chat Box
                    </div>
                    <div class="card-body  task-box">
                        @if (Model.Messages != null && Model.Messages.Any())
                        {
                            foreach (var message in Model.Messages)
                            {
                                <p><strong>@message.FullName</strong>: @message.MessageContent</p>
                            }
                        }
                        else
                        {
                            <p>No messages yet.</p>
                        }
                    </div>
                    <div class="card-footer">
                        <form asp-page-handler="SendMessage" id="sendMessageForm" method="post">
                            <div class="input-group">
                                <input asp-for="MessageContent" class="form-control" id="messageInput" placeholder="Enter message" autocomplete="off">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-primary">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
