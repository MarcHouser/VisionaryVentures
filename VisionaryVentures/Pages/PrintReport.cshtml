@page
@model VisionaryVentures.Pages.PrintReportModel
@{
    ViewData["Title"] = "Print Report";
    ViewData["selectedReportID"] = HttpContext.Session.GetInt32("selectedReportID");
}
<div class="container">
    <h1>@Model.Report.Title</h1>
    <p>Date Created: @Model.Report.DateCreated.ToShortDateString()</p>
    <p>Description: @Model.Report.Description</p>
    <h2>SWOT Analysis</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Strengths</th>
                <th>Weaknesses</th>
                <th>Opportunities</th>
                <th>Threats</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.SWOT.Strengths</td>
                <td>@Model.SWOT.Weaknesses</td>
                <td>@Model.SWOT.Opportunities</td>
                <td>@Model.SWOT.Threats</td>
            </tr>
        </tbody>
    </table>
    <h2>PEST Analysis</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Category</th>
                <th>Factor</th>
                <th>Implications</th>
                <th>Possible Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.PEST.Category</td>
                <td>@Model.PEST.Factor</td>
                <td>@Model.PEST.Implications</td>
                <td>@Model.PEST.PossibleActions</td>
            </tr>
        </tbody>
    </table>
    <form method="post" asp-page-handler="DownloadPDF" asp-route-reportID="@Model.Report.ReportID">
        <button type="submit" class="btn btn-primary">Download PDF</button>
    </form>
</div>
