@page
@using Microsoft.AspNetCore.Http
@model VisionaryVentures.Pages.KnowledgeLibraryModel

@{
    ViewData["Title"] = "Knowledge Library";
}
@{
    if (HttpContext.Session.GetString("username") != null)
    {
        Page();
    }
    else
    {
        Response.Redirect("/Login");
        return;
    }
}

<div class="side-bar">
    <div class="row">
        <nav class="col-md-3 d-flex flex-column flex-shrink-0 p-3 side-bar">
            <p></p>
            <hr>
            <form method="get" id="search-form">
                <div class="input-group">
                    <input type="search" class="form-control rounded" id="search" placeholder="Search groups" aria-label="Search">
                    <button id="search-btn" type="button" class="btn btn-primary search-button" onclick="filterItems('search');">Search</button>
                </div>
            </form>

            <div class="nav nav-pills flex-column mb-auto mt-3">
                <h2 class="mb-4">My Groups</h2>
                <hr>
                @if (Model.AllGroups != null && Model.AllGroups.Any())
                {
                    @foreach (var group in Model.AllGroups)
                    {
                        <form method="get">
                            <button type="submit" name="selectedCategory" value="@group" class="btn btn-block @(HttpContext.Request.Query["selectedGroup"] == group ? "btn-success" : "btn-primary")">@group.Title</button>
                            <hr>
                        </form>
                    }
                }
                else
                {
                    <p>No Groups Found.</p>
                }
            </div>

        </nav>
    </div>
</div>


<!-- Main Body: Report Building Page -->
<div class="main-body">

    <!-- General Information Section -->
    <div class="card my-4">
        <div class="card-header">
            General Information
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="SubmitGeneralInfo">
                <div class="mb-3">
                    <label for="reportTitle" class="form-label">Report Title</label>
                    <input type="text" class="form-control" id="reportTitle" name="Title" placeholder="Enter title">
                </div>
                <div class="mb-3">
                    <label for="reportDescription" class="form-label">Description</label>
                    <textarea class="form-control" id="reportDescription" name="Description" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save General Information</button>
            </form>
        </div>
    </div>

    <!-- SWOT Analysis Section -->
    <div class="card ">
        <div class="card-header">
            SWOT Analysis
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="AddSWOT" asp-route-action="Add">
                <input type="hidden" name="action" value="Add" />
                <div class="mb-3">
                    <label for="strengths" class="form-label">Strengths</label>
                    <input type="text" class="form-control" id="strengths" name="Strengths">
                </div>
                <div class="mb-3">
                    <label for="weaknesses" class="form-label">Weaknesses</label>
                    <input type="text" class="form-control" id="weaknesses" name="Weaknesses">
                </div>
                <div class="mb-3">
                    <label for="opportunities" class="form-label">Opportunities</label>
                    <input type="text" class="form-control" id="opportunities" name="Opportunities">
                </div>
                <div class="mb-3">
                    <label for="threats" class="form-label">Threats</label>
                    <input type="text" class="form-control" id="threats" name="Threats">
                </div>
                <button type="submit" class="btn btn-primary">Submit SWOT Analysis</button>
            </form>
        </div>
    </div>

    <!-- PEST Analysis Section -->
    <div class="card">
        <div class="card-header">
            PEST Analysis
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="political" class="form-label">Political</label>
                    <textarea class="form-control" id="political" name="Political" rows="2"></textarea>
                </div>
                <div class="mb-3">
                    <label for="economic" class="form-label">Economic</label>
                    <textarea class="form-control" id="economic" name="Economic" rows="2"></textarea>
                </div>
                <div class="mb-3">
                    <label for="social" class="form-label">Social</label>
                    <textarea class="form-control" id="social" name="Social" rows="2"></textarea>
                </div>
                <div class="mb-3">
                    <label for="technological" class="form-label">Technological</label>
                    <textarea class="form-control" id="technological" name="Technological" rows="2"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit PEST Analysis</button>
            </form>
        </div>
    </div>

    <!-- Notes Section -->
    <div class="card">
        <div class="card-header">
            Notes
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="notes" class="form-label">Additional Notes</label>
                    <textarea class="form-control" id="notes" name="Notes" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save Notes</button>
            </form>
        </div>
    </div>
</div>


